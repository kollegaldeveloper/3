    <script>
        lucide.createIcons();

        function switchSection(type) {
            const pickS = document.getElementById('section-pick');
            const foodS = document.getElementById('section-food');
            const pickT = document.getElementById('tab-pick');
            const foodT = document.getElementById('tab-food');

            if (type === 'pick') {
                pickS.classList.remove('hidden');
                foodS.classList.add('hidden');
                pickT.className = 'active-tab flex items-center gap-2 px-6 py-4 rounded-2xl font-bold transition-all';
                foodT.className = 'glass-card flex items-center gap-2 px-6 py-4 rounded-2xl font-bold text-gray-300 transition-all';
            } else {
                foodS.classList.remove('hidden');
                pickS.classList.add('hidden');
                foodT.className = 'active-tab flex items-center gap-2 px-6 py-4 rounded-2xl font-bold transition-all';
                pickT.className = 'glass-card flex items-center gap-2 px-6 py-4 rounded-2xl font-bold text-gray-300 transition-all';
            }
        }

        function getLocation(inputId) {
            const input = document.getElementById(inputId);
            input.value = "üìç Locating you...";
            
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition((pos) => {
                    input.value = `üìç GPS: ${pos.coords.latitude.toFixed(4)}, ${pos.coords.longitude.toFixed(4)}`;
                    // Mock distance pricing (Real world would use Google API)
                    const km = Math.floor(Math.random() * 5) + 1;
                    calculatePrice(km, inputId.includes('pick') ? 'pick-price' : 'food-price');
                }, () => {
                    input.value = "Kollegala Town";
                    calculatePrice(2, inputId.includes('pick') ? 'pick-price' : 'food-price');
                });
            }
        }

        function calculatePrice(km, displayId) {
            let price = 30;
            if (km > 1) price = 30;
            if (km > 2) price = 40;
            if (km > 3) price = 50;
            if (km > 4) price = 60;
            document.getElementById(displayId).innerText = `‚Çπ ${price}`;
        }

        function sendWhatsApp(type) {
            const adminPhone = "9448167849";
            let msg = "";

            if (type === 'pick') {
                const name = document.getElementById('pick-name').value;
                const phone = document.getElementById('pick-phone').value;
                const origin = document.getElementById('pick-origin').value;
                const dest = document.getElementById('pick-dest').value;
                const price = document.getElementById('pick-price').innerText;
                const notes = document.getElementById('pick-instr').value;

                if(!name || !phone) { alert("Please enter Name and Phone"); return; }

                msg = `*NEW PICK & DROP REQUEST*%0A%0A` +
                      `üë§ *Name:* ${name}%0A` +
                      `üìû *Phone:* ${phone}%0A` +
                      `üìç *From:* ${origin}%0A` +
                      `üèÅ *To:* ${dest}%0A` +
                      `üí∞ *Estimated Price:* ${price}%0A` +
                      `üìù *Instructions:* ${notes}`;
            } else {
                const name = document.getElementById('food-name').value;
                const phone = document.getElementById('food-phone').value;
                const items = document.getElementById('food-items').value;
                const loc = document.getElementById('food-loc').value;
                const price = document.getElementById('food-price').innerText;

                if(!name || !items) { alert("Please enter Name and Items"); return; }

                msg = `*NEW HOME FOOD ORDER*%0A%0A` +
                      `üë§ *Customer:* ${name}%0A` +
                      `üìû *Phone:* ${phone}%0A` +
                      `üç± *Items:* ${items}%0A` +
                      `üìç *Location:* ${loc}%0A` +
                      `üöö *Delivery Charge:* ${price}%0A%0A` +
                      `_Price calculated from Choudeshwari Road_`;
            }

            window.open(`https://wa.me/${adminPhone}?text=${msg}`, '_blank');
        }
    </script>
